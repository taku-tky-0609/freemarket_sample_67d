.buy-content
  .buy-content__item
    .buy-content__item__inner
      .buy-item-headder
        = image_tag "/images/logo.png", class:"headder-logo" 
      .buy-item-main
        %h2.buy-content_title
          商品購入の確認
        .purchasing
          .purchasing__images
            .purchasing__images__picture
              = image_tag @item.item_images[0].src.url
          .purchasing__detail
            .purchasing__detail__name
              = @item.item_name
            .purchasing__detail__price
              = "¥#{@item.price.to_s}"
              %span.shipping-free (税込) 送料込み
        .buy-content__item
          %form.buy-form
            .buy-price-table
              .buy-price-table__left
                支払金額
              .buy-price-table__right
                = "¥#{@item.price.to_s}"
        .buy-content__user-info
          .buy-content__user-info
            .buy-content__user-info__inner 
            -if user_signed_in? && @item.buyer_id == nil && @item.user_id != current_user.id
              = link_to pay_item_path(@item), method: :post, class: "purchase furimaBtn" do
                購入する
          .buy-content__user-info__inner
            .user-info-update
              = link_to "支払い方法を変更する", credit_cards_path(@user), method: :post, calss:"update-btn" 
            .user-info-text
      %footer.single-footer
        .terms  
          %ul
            %li.s
              = link_to "#" do
                プライバシーポリシー
            %li
              = link_to "#" do
                フリマ利用規約
            %li
              = link_to "#" do
                特定商取引に関する表記
          = image_tag "/images/logo-white.png", class: "hea"
          %p © Furima, Inc.
