=render 'items/header'
.mypagetop
  = render 'users/side'
  .cardNewArea
    .cardNewArea__advice
      商品購入にはクレジットカード登録が必要です！！
    .cardNewArea__title
      クレジットカード情報入力
    = form_tag(pay_credit_cards_path, method: :post, id: 'charge-form',  name: "inputForm" , class: "cardNewArea__form") do
      .cardNewArea__form__cardNumber
        .cardNewArea__form__cardNumber__title
          %h2 カード番号
          %h3 必須
        = text_field_tag "number", "", class: "cardNewArea__form__cardNumber__input", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
      .cardNewArea__form__image
      .cardNewArea__form__cardExpiration
        .cardNewArea__form__cardExpiration__title
          %h2 有効期限
          %h3 必須
        .cardNewArea__form__cardExpiration__input
          .cardNewArea__form__cardExpiration__input__month
            %select#exp_month{name: "exp_month", type: "text"}
              %option{value: ""} --
              %option{value: "1"}01
              %option{value: "2"}02
              %option{value: "3"}03
              %option{value: "4"}04
              %option{value: "5"}05
              %option{value: "6"}06
              %option{value: "7"}07
              %option{value: "8"}08
              %option{value: "9"}09
              %option{value: "10"}10
              %option{value: "11"}11
              %option{value: "12"}12
            %span 月/
          .cardNewArea__form__cardExpiration__input__year
            %select#exp_year{name: "exp_year", type: "text"}
              %option{value: ""} --
              %option{value: "2019"}19
              %option{value: "2020"}20
              %option{value: "2021"}21
              %option{value: "2022"}22
              %option{value: "2023"}23
              %option{value: "2024"}24
              %option{value: "2025"}25
              %option{value: "2026"}26
              %option{value: "2027"}27
              %option{value: "2028"}28
              %option{value: "2029"}29
            %span 年
      .cardNewArea__form__cardSecurity
        .cardNewArea__form__cardSecurity__title
          %h2 セキュリティコード
          %h3 必須
        .cardNewArea__form__cardSecurity__number
          = text_field_tag "cvc", "", class: "cardNewArea__form__cardSecurity__number__cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
          #card_token
      .cardNewArea__form__submit
        = submit_tag "追加する", id: "token_submit", class: "cardNewArea__form__submit__btn" 
= render 'items/footer'