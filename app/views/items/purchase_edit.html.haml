.first
  .buy-item-headder
    %img
      = image_tag "/images/logo.png", class:"head"

  .second
    %h1.buy-content__attention
      .y
        %i.far.fa-clock
          発送をお待ちください
      %h2.buy-content__attention__title
        購入が完了しました
      .tt  
        .buy-content__item
          .buy-content__item__inner
            .buy-item-main
              .buy-item-image
              
                - @item.item_images.each_with_index do |image,i|
                  .ProductImages__
                    = image_tag image.src.url
              .buy-item-detail
                .buy-item-name
                  = @item.item_name
                  %p.buy-price
                    %span 
                      = "¥#{@item.price.to_s}"
                    %span
                      .shipping-free (税込) 送料込み
        .buy-content__item
          %form.buy-form
            .buy-price-table
              .buy-price-table__left
                支払金額
              .buy-price-table__right
                = "¥#{@item.price.to_s}"
      .buy-content__user-info__submit
        = link_to "トップページへ戻る", root_path, class: 'buy-content__user-info__submit__button'
